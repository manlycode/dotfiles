[user]
        name = Chris Rittersdorf
        email = chris.rittersdorf@collectiveidea.com

[core]
        editor = vim
        excludesfile = /Users/manlycode/.gitignore

[alias]
        st = status
        co = checkout
        wip = !"git add -A .; git commit -m \"@WIP\""
        stash-all = !"git add -A .; git stash"
        delete-merged = !"git branch --merged | grep -v master | xargs -n 1 git branch -d"
        sync-master= !"git co master && git pull && git co - && git rebase master"

[diff]
        tool = opendiff

[difftool]
        prompt = false

[mergetool]
        prompt = false

[mergetool "storyboard"]
        name = StoryboardMerge interactive merge
        cmd = storyboard-merge $BASE $LOCAL $REMOTE $MERGED
        trustExitCode = false

[push]
        default = simple
[credential]
        helper = osxkeychain
[filter "hawser"]
        clean = git hawser clean %f
        smudge = git hawser smudge %f
        required = true
[merge]
        tool = opendiff
[filter "lfs"]
        clean = git lfs clean %f
        smudge = git lfs smudge %f
        required = true
[github]
        user = manlycode
